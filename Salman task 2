# Importing necessary libraries
import yfinance as yf
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split
from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_squared_error

# Fetch historical stock data from Yahoo Finance
stock_symbol = 'AAPL'  # Stock symbol (e.g., Apple)
start_date = '2020-01-01'  # Start date for data
end_date = '2023-12-31'  # End date for data

# Download stock data using yfinance
stock_data = yf.download(stock_symbol, start=start_date, end=end_date)

# Display the first few rows of the data to understand its structure
print("First 5 rows of the data:")
print(stock_data.head())

# Prepare the data: We will use Open, High, Low, Volume to predict Close price
stock_data['Target'] = stock_data['Close'].shift(-1)  # Shift Close to create Target for next day's Close
stock_data = stock_data[:-1]  # Remove the last row as it does not have a next day's data

# Features and target variable
features = ['Open', 'High', 'Low', 'Volume']
X = stock_data[features]
y = stock_data['Target']

# Split the data into training and testing sets (80% train, 20% test)
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.2, shuffle=False)

# Train a Linear Regression model
model = LinearRegression()
model.fit(X_train, y_train)

# Make predictions using the trained model
y_pred = model.predict(X_test)

# Evaluate the model's performance using Mean Squared Error (MSE)
mse = mean_squared_error(y_test, y_pred)
print(f"\nMean Squared Error (MSE): {mse:.2f}")

# Visualize the actual vs predicted closing prices
plt.figure(figsize=(12, 6))
plt.plot(y_test.index, y_test, color='blue', label='Actual Closing Price')
plt.plot(y_test.index, y_pred, color='red', label='Predicted Closing Price')
plt.title(f"{stock_symbol} - Actual vs Predicted Closing Price")
plt.xlabel('Date')
plt.ylabel('Price (USD)')
plt.legend()
plt.grid(True)
plt.xticks(rotation=45)  # Rotate x-axis labels for better visibility
plt.tight_layout()

# Show the plot
plt.show()
